{
  "private": true,
  "name": "borksy",
  "version": "6.5.0",
  "description": "Borksy Game Hacker: A tool for extending Bitsy games",
  "scripts": {
    "postversion": "npm run build",
    "start": "vite --port 80",
    "build": "vite build",
    "serve": "vite preview",
    "test": "jest --runInBand",
    "lint": "eslint \"src/**/*.js\"",
    "update-hacks": "node ./update-hacks.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ayolland/borksy.git"
  },
  "author": "AYolland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ayolland/borksy/issues"
  },
  "homepage": "https://ayolland.itch.io/borksy",
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setupTests.js"
    ],
    "globalSetup": "<rootDir>/src/test/globalSetup.js",
    "globalTeardown": "<rootDir>/src/test/globalTeardown.js"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/**/*",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "@bitsy/hecks": "^23.0.0",
    "dialog-polyfill": "^0.5.6",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "file-saver": "^2.0.5",
    "handlebars": "^4.7.8",
    "jest": "^29.7.0",
    "jest-dev-server": "^11.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "prettier": "^3.5.2",
    "puppeteer": "^22.15.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.83.4",
    "vite": "^6.2.4",
    "vite-plugin-markdown": "^2.2.0",
    "vite-plugin-string": "^1.2.3"
  }
}
