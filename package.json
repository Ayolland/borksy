{
  "private": true,
  "name": "borksy",
  "version": "5.28.0",
  "description": "Borksy Game Hacker: A tool for extending Bitsy games",
  "scripts": {
    "postversion": "npm run build",
    "start": "vite --port 80",
    "build": "vite build",
    "serve": "vite preview",
    "test": "jest --runInBand",
    "lint": "eslint \"src/**/*.js\"",
    "update-hacks": "node ./update-hacks.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ayolland/borksy.git"
  },
  "author": "AYolland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ayolland/borksy/issues"
  },
  "homepage": "https://ayolland.itch.io/borksy",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setupTests.js"
    ],
    "globalSetup": "<rootDir>/src/test/globalSetup.js",
    "globalTeardown": "<rootDir>/src/test/globalTeardown.js"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/**/*",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "@bitsy/hecks": "^21.2.1",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "file-saver": "^2.0.5",
    "handlebars": "^4.7.7",
    "jest": "^29.3.1",
    "jest-dev-server": "^6.1.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-image-snapshot": "^6.0.0",
    "prettier": "^2.8.0",
    "puppeteer": "^19.3.0",
    "rollup-plugin-visualizer": "^5.8.3",
    "sass": "^1.56.1",
    "vite": "^3.2.5",
    "vite-plugin-markdown": "^2.1.0",
    "vite-plugin-string": "^1.1.2"
  }
}
