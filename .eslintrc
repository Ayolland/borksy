{
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"env": {
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true,
			"spread": true,
			"experimentalObjectRestSpread": true
		}
	},
	"ignorePatterns": ["public"],
	"rules": {
		"indent": "off", // prettier handles indentation
		"max-len": "off", // just apply common-sense

		// all dependencies are bundled
		"import/no-extraneous-dependencies": ["error", {
			"devDependencies": true
		}],

		// for dev accessibility
		"no-console": "off",
		"no-use-before-define": "off",

		// i just like using these ü§∑‚Äç‚ôÄÔ∏è
		"no-multi-assign": "off",
		"no-plusplus": "off",
		"no-continue": "off"
	},
	"overrides": [{
		"files": [
			"**/*.test.js",
			"**/*/test/**/*.js",
			"globalSetup.js",
			"globalTeardown.js",
		],
		"env": {
			"node": true,
			"jest": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 9,
			"sourceType": "module"
		},
		"rules": {
			"import/no-extraneous-dependencies": ["error", {
				"devDependencies": true
			}]
		}
	}]
}
